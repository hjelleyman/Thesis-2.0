isbn = {1536-0040},
journal = {SIAM Journal on Applied Dynamical Systems},
language = {English},
month = {jul},
number = {3},
pages = {1280--1329},
title = {{Interacting Global Invariant Sets in a Planar Map Model of Wild Chaos}},
url = {https://search.proquest.com/docview/1414751863},
volume = {12},
year = {2013}
}
