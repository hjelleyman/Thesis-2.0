journal = {Journal of Climate},
keywords = {Arctic oscillation,Atm/ocean structure/ phenomena,Atmospheric circulation,Circulation/ dynamics,Mathematical and statistical techniques,Stratosphere-troposphere coupling,Teleconnections,Time series},
