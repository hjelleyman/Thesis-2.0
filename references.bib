file = {:C$\backslash$:/Users/Hamish/OneDrive - The University of Auckland/Papers/Kwok, Comiso - 2002 - Southern Ocean climate and sea ice anomalies associated with the Southern Oscillation.pdf:pdf},
issn = {08948755},
